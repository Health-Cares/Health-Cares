<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="viewmodel"
                type="com.example.healthcare.data.MedicalViewModelSolution"/>
    </data>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="vertical">
        <TextView
                android:text="Medical History"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="200dp"
                android:id="@+id/textView7"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toTopOf="parent"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
        <TextView
                android:text="First Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/firstN_textView"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.042"/>
        <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/firstN_editText"
                app:layout_constraintTop_toBottomOf="@+id/firstN_textView" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.177"/>
        <TextView
                android:text="Last Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lastN_textView"
                app:layout_constraintTop_toBottomOf="@+id/firstN_editText"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.04"/>
        <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/lastN_editText"
                app:layout_constraintTop_toBottomOf="@+id/lastN_textView" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.177"/>
        <TextView
                android:text="Age"
                android:layout_width="41dp"
                android:layout_height="28dp"
                android:id="@+id/textView10" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView7" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.01"/>
        <Spinner
                android:layout_width="65dp"
                android:layout_height="28dp"
                android:id="@+id/spinner" app:layout_constraintStart_toEndOf="@+id/textView10"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView7"
                app:layout_constraintHorizontal_bias="0.384"/>
        <TextView
                android:text="Sex"
                android:layout_width="42dp"
                android:layout_height="25dp"
                android:id="@+id/textView11" android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@+id/textView10"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.012"/>
        <RadioButton
                android:text="Male"
                android:layout_width="82dp"
                android:layout_height="27dp"
                android:id="@+id/radioButton" android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@+id/spinner" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/textView11"
                android:layout_marginStart="8dp"/>
        <RadioButton
                android:text="Female"
                android:layout_width="81dp"
                android:layout_height="27dp"
                android:id="@+id/radioButton2" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/radioButton" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/textView11"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="Medical Status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView14" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/guideline2" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
        <TextView
                android:text="Hospital"
                android:layout_width="63dp"
                android:layout_height="32dp"
                android:id="@+id/hospital_textView" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView14"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.046"/>
        <EditText
                android:layout_width="300dp"
                android:layout_height="39dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/hospital_editText" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView14" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/hospital_textView"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.428"/>
        <TextView
                android:text="Doctor Name"
                android:layout_width="97dp"
                android:layout_height="32dp"
                android:id="@+id/doctorN_textView"
                app:layout_constraintTop_toBottomOf="@+id/hospital_textView"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.036"
                android:layout_marginTop="20dp"/>
        <EditText
                android:layout_width="300dp"
                android:layout_height="38dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/doctorN_editText" android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/hospital_editText" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/doctorN_textView"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.161"/>
        <TextView
                android:text="Card Number"
                android:layout_width="92dp"
                android:layout_height="29dp"
                android:id="@+id/cardN_textView" android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/doctorN_textView"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.027"/>
        <EditText
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/cardN_editText" android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/doctorN_editText" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/cardN_textView"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.232"/>
        <TextView
                android:text="CheckUp Date"
                android:layout_width="100dp"
                android:layout_height="29dp"
                android:id="@+id/check_textView" android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/cardN_textView"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.029"/>
        <EditText
                android:layout_width="215dp"
                android:layout_height="39dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/check_editText" android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/cardN_editText" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/check_textView"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.132"/>
        <TextView
                android:text="Medical History"
                android:layout_width="100dp"
                android:layout_height="29dp"
                android:id="@+id/cardN_textView2" android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/doctorN_textView"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.027"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/cardN_editText2" android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/doctorN_editText" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/cardN_textView"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.232"/>
        <Button
                android:text="Save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/save_button"/>
        <Button
                android:text="Update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/update_button"/>
        <Button
                android:text="Delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/delete_button"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
</layout>